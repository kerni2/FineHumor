<%= provide :main_menu do %>
  <header class="p-3" style="background-color: #F8F6F2;">
    <div class="container">
      <nav class="d-flex flex-wrap align-items-center justify-content-lg-start">
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li>
            <%= nav_tab 'Home', root_path, class: 'btn px-2 text-gray-700', current_page: current_page %>
          </li>
          <li>
            <%= nav_tab 'Jokes', jokes_path, class: 'btn px-2 text-gray-700', current_page: current_page %>
          </li>
          <% if user_signed_in? %>
            <li>
              <%= nav_tab 'New joke', new_joke_path, class: 'btn px-2 text-gray-700', current_page: current_page %>
            </li>
          <% end %>    
        </ul>

        <ul class="nav col-12 col-lg-auto mb-md-0 mb-2">
          <% if user_signed_in? %>
            <li class="dropdown">
              <%= nav_tab current_user.email, '#',
                class: 'btn px-2 dropdown-toggle',
                data: {"bs-toggle": 'dropdown'}, current_page: current_page %>

              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Edit profile', edit_user_registration_path,
                    class: 'dropdown-item btn px-2 text-gray-700' %>
                </li>
                <li>
                  <hr class="dropdown-divider">
                </li>
                <li>
                  <%= link_to 'Log out', destroy_user_session_path,
                    class: 'dropdown-item btn px-2 text-gray-700', data: {method: :delete} %>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= nav_tab 'Sign up', new_user_registration_path,
                class: 'btn px-2 text-gray-700', current_page: current_page %>
            </li>
            <li>
              <%= nav_tab 'Log in', new_user_session_path,
                class: 'btn px-2 text-gray-700', current_page: current_page %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
<% end %>